<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

	<head>
        <title>FooBar Online Store - PÃ¡gina Inicial</title>

 	 	<%= stylesheet_link_tag    "application"%>
  		<%= javascript_include_tag "application" %>
 		 <%= csrf_meta_tags %>
	</head>
	
<body>

    <div id="header">
    	<%= link_to image_tag("logo-blue.png"), root_url, id: "logo" %>
        <div id="title">FooBar Online Store</div>
               
        <%= form_tag("/search", :method => 'get', :id =>"searchForm") do %>     
        	<p>
        		<%= text_field_tag :search, params[:search]%>
        		<%= submit_tag "Search", :name => nil %>     	
        	</p>
        <% end %> 
 
         
        <div id="userInfo">
        	<% if current_user %>
        		<% if current_user.admin %>Administrador:
        		<% else %> Utilizador:
        		<% end %>

        		<%= link_to current_user.username, user_path(current_user) %> <br/>
        		<%= link_to "O meu carrinho de Compras", current_user.cart %>
        		<%= link_to "Log Out", session_path("current"), method: "delete" %>
        	<% else %>
				<%= link_to "Sign Up", new_user_path %> ou <%= link_to "Sign In", new_session_path %> 
			<% end %> </br>
        </div> 
        
    </div>
	<div id="container">
		<%= yield %>
    </div>

</body>
</html>
